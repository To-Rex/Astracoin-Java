<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottomsheetdisigin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_height="168dp"
            android:background="@drawable/walletcard"
            app:layout_constraintStart_toStartOf="@+id/guideline28"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/view26"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline29"
            android:id="@+id/view29"/>
        <View
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:background="@drawable/walletcard"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@+id/guideline28"
            app:layout_constraintEnd_toStartOf="@+id/guideline29"
            android:id="@+id/view26"/>
        <View
            android:id="@+id/view13"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@color/fon"
            app:layout_constraintTop_toTopOf="@+id/view29"
            android:layout_marginTop="53dp"
            app:layout_constraintStart_toStartOf="@+id/guideline28"
            app:layout_constraintEnd_toStartOf="@+id/guideline29"/>
        <View
            android:id="@+id/view37"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@color/fon"
            app:layout_constraintStart_toStartOf="@+id/guideline28"
            app:layout_constraintEnd_toStartOf="@+id/guideline29"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/view13"
            android:layout_marginTop="53dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_security_user"
            android:elevation="2dp"
            android:id="@+id/imageView20"
            app:layout_constraintEnd_toEndOf="@+id/imageView24"
            app:layout_constraintTop_toBottomOf="@+id/view13"
            app:layout_constraintStart_toStartOf="@+id/imageView24"
            tools:ignore="ContentDescription"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/view37"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_doll"
            android:id="@+id/imageView24"
            android:elevation="2dp"
            tools:ignore="ContentDescription"
            app:layout_constraintStart_toStartOf="@+id/guideline28"
            app:layout_constraintTop_toTopOf="@+id/view29"
            app:layout_constraintBottom_toTopOf="@+id/view13"
            android:layout_marginStart="12dp"
            app:layout_constraintVertical_bias="1.0"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="1dp"
            app:srcCompat="@drawable/ic_emptywallet"
            android:id="@+id/imageView6"
            app:layout_constraintStart_toStartOf="@+id/imageView20"
            app:layout_constraintTop_toBottomOf="@+id/view37"
            app:layout_constraintBottom_toBottomOf="@+id/view29"
            tools:ignore="ContentDescription"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/hidecolor"
            android:id="@+id/view24"/>
        <View
            android:layout_width="80dp"
            android:layout_height="6dp"
            android:background="@drawable/shadovfon"
            app:layout_constraintTop_toTopOf="@+id/view23"
            android:id="@+id/view25"
            app:layout_constraintStart_toStartOf="@+id/view23"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/view23"
            android:background="@color/hidecolor"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@+id/view24"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/view22"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            android:layout_marginTop="0dp"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/setshapimguser090d"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
            app:srcCompat="@drawable/ic_profile_circle"
            app:layout_constraintTop_toBottomOf="@+id/view25"
            android:layout_marginTop="52dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline29"
            app:layout_constraintStart_toStartOf="@+id/guideline28"/>
        <TextView
            android:text="@string/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtsearchbottomname"
            android:textSize="22sp"
            android:textStyle="bold"
            app:fontFamily="@font/fredoka_fonts"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/setshapimguser090d"
            app:layout_constraintTop_toBottomOf="@+id/setshapimguser090d"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/setshapimguser090d"/>
        <TextView
            android:text="@string/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtsearchusercoin"
            app:fontFamily="@font/fredoka_fonts"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/imageView24"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView24"
            app:layout_constraintBottom_toBottomOf="@+id/imageView24"/>
        <TextView
            android:text="Send Coin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/txtsearchusersend"
            app:fontFamily="@font/fredoka_fonts"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/txtsearchusercoin"
            app:layout_constraintTop_toTopOf="@+id/imageView27"
            app:layout_constraintBottom_toBottomOf="@+id/imageView27"
            tools:ignore="HardcodedText"
            app:layout_constraintEnd_toEndOf="@+id/view26"/>
        <TextView
            android:text="@string/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:fontFamily="@font/fredoka_fonts"
            android:id="@+id/txtbottomsearchqwasar"
            app:layout_constraintTop_toTopOf="@+id/imageView20"
            app:layout_constraintStart_toStartOf="@+id/txtsearchusercoin"
            app:layout_constraintBottom_toBottomOf="@+id/imageView20"/>
        <TextView
            android:text="@string/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:fontFamily="@font/fredoka_fonts"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/txtsearchbottomname"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/txtsearchbottomname"
            app:layout_constraintEnd_toEndOf="@+id/txtsearchbottomname"/>
        <TextView
            android:text="@string/connect"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/txtbottvalletiiid"
            app:fontFamily="@font/fredoka_fonts"
            android:textIsSelectable="true"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="@+id/imageView6"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            app:layout_constraintStart_toStartOf="@+id/txtbottomsearchqwasar"
            app:layout_constraintEnd_toStartOf="@+id/guideline29"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.05"
            android:id="@+id/guideline28"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.95"
            android:id="@+id/guideline29"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_sendcoiin"
            android:id="@+id/imageView27"
            app:layout_constraintStart_toStartOf="@+id/imageView24"
            app:layout_constraintTop_toTopOf="@+id/view26"
            app:layout_constraintBottom_toBottomOf="@+id/view26"
            tools:ignore="ContentDescription"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>