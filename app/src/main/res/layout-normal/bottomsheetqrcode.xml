<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottomsheetdisigin">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/hidecolor">
        <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/hidecolor"
                android:id="@+id/view24"/>
        <View
                android:layout_width="80dp"
                android:layout_height="6dp"
                android:background="@drawable/shadovfon"
                app:layout_constraintTop_toTopOf="@+id/view23"
                app:layout_constraintEnd_toEndOf="@+id/view17"
                app:layout_constraintStart_toStartOf="@+id/view17"
                android:id="@+id/view25"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/view23"
                android:background="@color/hidecolor"
                tools:layout_editor_absoluteX="0dp"
                app:layout_constraintTop_toBottomOf="@+id/view24"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recieve"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                app:fontFamily="@font/fredoka_fonts"
                android:id="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/view23"
                app:layout_constraintEnd_toEndOf="@+id/view17"
                app:layout_constraintStart_toStartOf="@+id/view17"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:id="@+id/view15"
                android:background="@color/hidecolor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"/>
        <View
                android:layout_width="300dp"
                android:layout_height="300dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/walletcard"
                app:layout_constraintTop_toBottomOf="@+id/view15"
                android:id="@+id/view17"/>
        <ImageView
                android:layout_width="290dp"
                android:layout_height="290dp"
                android:src="@drawable/ic_qr50877531"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@+id/view17"
                app:layout_constraintEnd_toEndOf="@+id/view17"
                app:layout_constraintStart_toStartOf="@+id/view17"
                app:layout_constraintTop_toBottomOf="@+id/view15"
                tools:ignore="ContentDescription"
                android:id="@+id/imgbottomqrcode"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@+id/view17"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/view18"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_export"
                android:id="@+id/imageView22"
                android:elevation="8dp"
                app:layout_constraintEnd_toEndOf="@+id/btnbottomshare"
                android:layout_marginEnd="100dp"
                app:layout_constraintTop_toBottomOf="@+id/view21"
                app:layout_constraintBottom_toBottomOf="@+id/btnbottomshare"
                tools:ignore="ContentDescription"/>
        <View
                android:layout_width="300dp"
                android:layout_height="45dp"
                app:layout_constraintStart_toStartOf="@+id/view17"
                app:layout_constraintEnd_toEndOf="@+id/view17"
                android:background="@drawable/loginedittext1"
                app:layout_constraintTop_toBottomOf="@+id/view18"
                android:id="@+id/textView3"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                android:id="@+id/view21"/>
        <Button
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:text="@string/share"
                android:textColor="@color/white"
                app:fontFamily="@font/fredoka_fonts"
                android:background="@drawable/butttonstyle"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/view21"
                style="@android:style/Widget.Holo.Button.Borderless"
                android:id="@+id/btnbottomshare"
                app:layout_constraintHorizontal_bias="0.0"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnbottomshare"
                android:id="@+id/view22"/>
        <TextView
                android:layout_width="260dp"
                android:layout_height="32dp"
                android:text="@string/connect"
                android:textIsSelectable="true"
                android:gravity="center_vertical"
                app:fontFamily="@font/fredoka_fonts"
                android:textSize="11sp"
                app:layout_constraintTop_toBottomOf="@+id/view18"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                android:id="@+id/txtbottomwallet"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_document_copy"
                android:id="@+id/imgbottomcopi"
                app:layout_constraintTop_toBottomOf="@+id/view18"
                app:layout_constraintBottom_toTopOf="@+id/view21"
                app:layout_constraintEnd_toEndOf="@+id/textView3"
                android:layout_marginEnd="10dp"
                app:layout_constraintVertical_bias="0.523"
                tools:ignore="ContentDescription"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>