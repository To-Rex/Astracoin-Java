<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottommenu"
    style="@style/custombottomsheet"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="717dp">
        <View
            android:layout_width="80dp"
            android:layout_height="6dp"
            android:background="@drawable/shadovfon"
            android:id="@+id/view25"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.498"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/view22"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <ImageView
            android:layout_width="126dp"
            android:layout_height="43dp"
            app:srcCompat="@drawable/ic_group_13"
            android:id="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ContentDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view25"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.501"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/fon"
            android:id="@+id/view12"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_info_circle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
            app:layout_constraintTop_toBottomOf="@+id/view12"
            android:layout_marginTop="32dp"
            tools:ignore="ContentDescription"/>
        <TextView
            android:text="@string/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/fredoka_fonts"
            android:id="@+id/bottchekamaunt"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/bottomchektitle"
            app:layout_constraintStart_toStartOf="@+id/bottomchektitle"
            app:layout_constraintBottom_toBottomOf="@+id/imageView23"/>
        <TextView
            android:text="@string/service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textSize="17sp"
            app:fontFamily="@font/fredoka_fonts"
            app:layout_constraintStart_toStartOf="@+id/imageView23"
            app:layout_constraintTop_toBottomOf="@+id/imageView23"
            android:layout_marginTop="12dp"/>
        <TextView
            android:text="@string/date_and_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            app:fontFamily="@font/fredoka_fonts"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/bottchektype"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@+id/bottchektype"/>
        <TextView
            android:text="@string/connect"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:fontFamily="@font/fredoka_fonts"
            android:id="@+id/bottchektype"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            android:layout_marginTop="8dp"/>
        <TextView
            android:text="@string/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/bottchekdate"
            app:fontFamily="@font/fredoka_fonts"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/textView11"/>
        <TextView
            android:text="@string/receiver_s_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            app:fontFamily="@font/fredoka_fonts"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/bottchekdate"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@+id/bottchekdate"/>
        <TextView
            android:text="@string/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:fontFamily="@font/fredoka_fonts"
            android:id="@+id/bottchekfio"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/textView15"/>
        <TextView
            android:text="@string/receiver_s_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontFamily="@font/fredoka_fonts"
            android:id="@+id/textView17"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/bottchekfio"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@+id/bottchekfio"/>
        <TextView
            android:text="@string/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:fontFamily="@font/fredoka_fonts"
            android:id="@+id/bottchekwallet_to"
            android:textIsSelectable="true"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/textView17"/>
        <TextView
            android:text="@string/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            app:fontFamily="@font/fredoka_fonts"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/bottchekwallet_to"
            app:layout_constraintTop_toBottomOf="@+id/bottchekwallet_to"
            android:layout_marginTop="12dp"/>
        <TextView
            android:text="@string/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:fontFamily="@font/fredoka_fonts"
            android:id="@+id/bottchekcomment"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textView19"
            app:layout_constraintTop_toBottomOf="@+id/textView19"
            android:layout_marginTop="8dp"/>
        <TextView
            android:text="@string/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            app:fontFamily="@font/fredoka_fonts"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/bottchekcomment"
            app:layout_constraintTop_toBottomOf="@+id/bottchekcomment"
            android:layout_marginTop="12dp"/>
        <TextView
            android:text="@string/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottchekstatus"
            app:fontFamily="@font/fredoka_fonts"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/textView21"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:text="@string/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            app:fontFamily="@font/fredoka_fonts"
            android:id="@+id/bottomchektitle"
            app:layout_constraintStart_toEndOf="@+id/imageView23"
            android:layout_marginStart="28dp"
            app:layout_constraintTop_toTopOf="@+id/imageView23"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>