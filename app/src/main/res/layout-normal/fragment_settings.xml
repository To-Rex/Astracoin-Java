                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/view11"
                        app:layout_constraintStart_toStartOf="@+id/imageView13"
                        app:layout_constraintTop_toTopOf="@+id/view11"
                        app:srcCompat="@drawable/ic_logout"
                        tools:ignore="ContentDescription" />

                    <View
                        android:id="@+id/view13"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:background="@color/fon"
                        app:layout_constraintBottom_toTopOf="@+id/view16"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/view9"
                        app:layout_constraintVertical_bias="0.681" />

                    <TextView
                        android:id="@+id/txtsettperinfo"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:text="@string/connect"
                        app:fontFamily="@font/fredoka_fonts"
                        app:layout_constraintBottom_toTopOf="@+id/view13"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/txtsettshop"
                        app:layout_constraintTop_toTopOf="@+id/view9" />

                    <View
                        android:id="@+id/view32"
                        android:layout_width="match_parent"
                        android:layout_height="93dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/walletcard"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view9" />

                    <TextView
                        android:id="@+id/txtsettshop"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:text="@string/astrum_store"
                        app:fontFamily="@font/fredoka_fonts"
                        app:layout_constraintBottom_toBottomOf="@+id/view31"
                        app:layout_constraintEnd_toEndOf="@+id/view31"
