<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fon">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/usimage"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="25dp"
            android:padding="3dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/guideline19"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/guideline18"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
            app:srcCompat="@drawable/ic_profile_circle" />

        <TextView
            android:id="@+id/txtsetfullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/connect"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:fontFamily="@font/fredoka_fonts"
            app:layout_constraintEnd_toEndOf="@+id/usimage"
            app:layout_constraintStart_toStartOf="@+id/usimage"
            app:layout_constraintTop_toBottomOf="@+id/usimage" />

        <TextView
            android:id="@+id/txtsetemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/connect"
            app:fontFamily="@font/fredoka_fonts"
            app:layout_constraintEnd_toEndOf="@+id/txtsetfullname"
            app:layout_constraintStart_toStartOf="@+id/txtsetfullname"
            app:layout_constraintTop_toBottomOf="@+id/txtsetfullname" />

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline32"
            app:layout_constraintEnd_toStartOf="@+id/guideline19"
            app:layout_constraintStart_toStartOf="@+id/guideline18"
            app:layout_constraintTop_toTopOf="@+id/guideline33">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/view9"
                        android:layout_width="match_parent"
                        android:layout_height="141dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/walletcard"
                        app:layout_constraintTop_toBottomOf="@+id/view31"
                        tools:layout_editor_absoluteX="0dp" />

                    <View
                        android:id="@+id/view31"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
