                        android:background="@drawable/walletcard"
                        app:layout_constraintTop_toBottomOf="@+id/view30"
                        tools:layout_editor_absoluteX="0dp" />

                    <View
                        android:id="@+id/view11"
                        android:layout_width="match_parent"
