<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottomsheetdisigin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edibottomwallcament"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingStart="15dp"
            android:elevation="0.1dp"
            app:fontFamily="@font/fredoka_fonts"
            android:hint="@string/comment"
            android:inputType="textMultiLine"
            android:maxLength="200"
            android:minLines="2"
            android:maxLines="4"
            android:paddingEnd="15dp"
            tools:ignore="Autofill,RtlSymmetry"
            android:background="@drawable/loginedittext1"
            app:layout_constraintTop_toTopOf="@+id/view21"
            app:layout_constraintStart_toStartOf="@+id/view21"
            app:layout_constraintEnd_toEndOf="@+id/view21"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.8"/>
        <EditText
            android:id="@+id/edibottomwalletamaund"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:ems="10"
            android:paddingStart="15dp"
            app:fontFamily="@font/fredoka_fonts"
            android:maxLength="20"
            android:hint="@string/_0_asc"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/view17"
            app:layout_constraintStart_toStartOf="@+id/view17"
            android:background="@drawable/loginedittext1"
            app:layout_constraintTop_toBottomOf="@+id/view18"
            app:layout_constraintHorizontal_bias="0.497"
            tools:ignore="Autofill,RtlSymmetry"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/hidecolor"
            android:id="@+id/view24"/>
        <View
            android:layout_width="80dp"
            android:layout_height="6dp"
            android:background="@drawable/shadovfon"
            app:layout_constraintTop_toTopOf="@+id/view23"
            app:layout_constraintEnd_toEndOf="@+id/view17"
            app:layout_constraintStart_toStartOf="@+id/view17" android:id="@+id/view25"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/view23"
            android:background="@color/hidecolor"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@+id/view24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:fontFamily="@font/fredoka_fonts"
            android:textStyle="bold"
            android:id="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/view23"
            app:layout_constraintEnd_toEndOf="@+id/view17"
            app:layout_constraintStart_toStartOf="@+id/view17"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/view15"
            android:background="@color/hidecolor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
        <View
            android:layout_width="300dp"
            android:layout_height="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/walletcard"
            app:layout_constraintTop_toBottomOf="@+id/view15"
            android:id="@+id/view17"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/view17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/view18" app:layout_constraintHorizontal_bias="0.0"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_export"
            android:id="@+id/imageView22"
            android:elevation="8dp"
            tools:ignore="ContentDescription"
            app:layout_constraintEnd_toEndOf="@+id/btnbottomshare"
            android:layout_marginEnd="100dp"
            app:layout_constraintTop_toTopOf="@+id/btnbottomshare"
            app:layout_constraintBottom_toTopOf="@+id/view22"/>
        <View
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:id="@+id/view21"
            android:background="@drawable/loginedittext1"
            app:layout_constraintTop_toBottomOf="@+id/edibottomwalletamaund"
            app:layout_constraintStart_toStartOf="@+id/edibottomwalletamaund"
            app:layout_constraintEnd_toEndOf="@+id/edibottomwalletamaund"
            android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.0"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:text="@string/send"
            android:textColor="@color/white"
            app:fontFamily="@font/fredoka_fonts"
            android:background="@drawable/butttonstyle"
            app:layout_constraintTop_toBottomOf="@+id/view21"
            style="@android:style/Widget.Holo.Button.Borderless"
            android:id="@+id/btnbottomshare"
            app:layout_constraintStart_toStartOf="@+id/edibottomwalletamaund" android:layout_marginTop="20dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnbottomshare"
            android:id="@+id/view22"/>
        <ImageView
            android:id="@+id/imgpastbottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_past"
            android:elevation="8dp"
            app:layout_constraintEnd_toEndOf="@+id/view17"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view15"
            app:layout_constraintBottom_toBottomOf="@+id/view17"
            tools:ignore="ContentDescription"/>
        <EditText
            android:id="@+id/edibottomwalletid"
            android:layout_height="34dp"
            android:maxLength="50"
            android:textSize="11sp"
            app:fontFamily="@font/fredoka_fonts"
            android:background="@drawable/loginedittext1"
            android:hint="@string/wallet_address"
            android:layout_width="257dp"
            app:layout_constraintStart_toStartOf="@+id/view17"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/view17"
            app:layout_constraintTop_toBottomOf="@+id/view15"
            tools:ignore="Autofill,TextFields"/>
        <TextView
            android:id="@+id/txtwalletname"
            android:text="@string/connect"
            android:layout_width="wrap_content"
            app:fontFamily="@font/fredoka_fonts"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view17"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/edibottomwalletid"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>