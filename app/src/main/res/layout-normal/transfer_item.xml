<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="6dp"
    app:cardCornerRadius="10sp"
    app:cardElevation="8dp">
    <TextView
        android:id="@+id/tranferdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:fontFamily="@font/fredoka_fonts"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:background="@drawable/loginedittext3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/view6"
        app:layout_constraintTop_toBottomOf="@+id/tranferdata"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/trimage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="3dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        app:srcCompat="@drawable/ic_felid"
        app:layout_constraintTop_toTopOf="@+id/view6"
        app:layout_constraintBottom_toBottomOf="@+id/view6"
        app:layout_constraintStart_toStartOf="@+id/view6"
        android:layout_marginStart="10dp"
        app:layout_constraintVertical_bias="0.4"/>
    <TextView
        android:id="@+id/trtransfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/trimage"
        android:layout_toEndOf="@id/trimage"
        android:padding="3dp"
        android:textSize="18sp"
        app:fontFamily="@font/fredoka_fonts"
        android:text="@string/transfer"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/trimage"
        app:layout_constraintStart_toEndOf="@+id/trimage"
        android:layout_marginTop="4dp"
        android:layout_marginStart="6dp"/>
    <TextView
        android:id="@+id/trcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect"
        android:textSize="13sp"
        app:fontFamily="@font/fredoka_fonts"
        android:textStyle="bold"
        android:textColor="#A1A3A5"
        app:layout_constraintTop_toBottomOf="@+id/trtransfer"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/trtransfer"
        android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>