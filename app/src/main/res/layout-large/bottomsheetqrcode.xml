<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottomsheetdisigin">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hidecolor">
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/hidecolor"
            android:id="@+id/view24"/>
        <View
            android:layout_width="80dp"
            android:layout_height="6dp"
            android:background="@drawable/shadovfon"
            app:layout_constraintTop_toTopOf="@+id/view23"
            app:layout_constraintEnd_toEndOf="@+id/view17"
            app:layout_constraintStart_toStartOf="@+id/view17"
            android:id="@+id/view25"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/view23"
            android:background="@color/hidecolor"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toBottomOf="@+id/view24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recieve"
            app:fontFamily="@font/fredoka_fonts"
            android:textColor="@color/black"
            android:textSize="38sp"
            android:textStyle="bold"
            android:id="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/view23" app:layout_constraintEnd_toEndOf="@+id/view17"
            app:layout_constraintStart_toStartOf="@+id/view17" android:layout_marginTop="48dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/view15"
            android:background="@color/hidecolor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
        <View
            android:layout_width="0dp"
            android:layout_height="600dp"
            app:layout_constraintStart_toStartOf="@+id/guideline24"
            android:background="@drawable/walletcard"
            app:layout_constraintTop_toBottomOf="@+id/view15"
            android:id="@+id/view17" app:layout_constraintEnd_toStartOf="@+id/guideline25"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="580dp"
            android:src="@drawable/ic_qr50877531"
            android:scaleType="fitXY"
            android:paddingStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/view17"
            app:layout_constraintEnd_toEndOf="@+id/view17"
            app:layout_constraintStart_toStartOf="@+id/view17"
            app:layout_constraintTop_toBottomOf="@+id/view15"
            tools:ignore="ContentDescription"
            android:id="@+id/imgbottomqrcode"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/view17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/view18" android:layout_marginTop="20dp" app:layout_constraintHorizontal_bias="0.0"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_export"
            android:id="@+id/imageView22"
            app:layout_constraintWidth_percent="0.66"
            android:elevation="8dp"
            tools:ignore="ContentDescription"
            app:layout_constraintStart_toStartOf="@+id/guideline27"
            app:layout_constraintTop_toBottomOf="@+id/view21"
            app:layout_constraintBottom_toBottomOf="@+id/btnbottomshare"/>
        <View
            android:layout_width="0dp"
            android:layout_height="75dp"
            app:layout_constraintStart_toStartOf="@+id/guideline24"
            android:background="@drawable/loginedittext1"
            app:layout_constraintTop_toBottomOf="@+id/view18"
            android:id="@+id/textView3" app:layout_constraintEnd_toStartOf="@+id/guideline25"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:id="@+id/view21"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:text="@string/share"
            android:textColor="@color/white"
            android:textSize="38sp"
            app:fontFamily="@font/fredoka_fonts"
            android:background="@drawable/butttonstyle"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/view21"
            style="@android:style/Widget.Holo.Button.Borderless"
            android:id="@+id/btnbottomshare"
            app:layout_constraintHorizontal_bias="0.0"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnbottomshare"
            android:id="@+id/view22"/>

        <TextView
            android:id="@+id/txtbottomwallet"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:gravity="center_vertical"
            android:text="@string/connect"
            android:textIsSelectable="true"
            android:textSize="25sp"
            app:fontFamily="@font/fredoka_fonts"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/guideline25"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/view18"
            app:layout_constraintWidth_percent="0.66" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_document_copy"
            android:id="@+id/imgbottomcopi"
            tools:ignore="ContentDescription"
            app:layout_constraintEnd_toEndOf="@+id/textView3" app:layout_constraintBottom_toTopOf="@+id/view21"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/view18"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.15"
            android:id="@+id/guideline24"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.85"
            android:id="@+id/guideline25"/>

        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.58" android:id="@+id/guideline27"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>